<%= link_to "Edit your task", update_task_path, class: "btn btn-primary" %>
<h2><%=@task.title%></h2>
<p><%=@task.details%></p>
<%if @task.completed%>
  <%= "Done!" %>
<% else %>
  <%= "Not finished yet" %>
<% end %>
<br>
<%= link_to "Back to your tasks", tasks_path, class: "btn btn-primary" %>
<%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%>
